<%= form_for @request do |f| %>

  <div>
    <%= f.label "name" %><br />
    <%= f.text_field :name, class: 'field' %>
  </div>
  <div>
    <%= f.label "email" %><br />
    <%= f.text_field :email, class: 'field' %>
  </div>

  <div>
    <%= f.label "phone_number" %><br />
    <%= f.text_field :phone_number, class: 'field' %>
  </div>

  <div>
    <%= f.label "description" %><br />
    <%= f.text_area :description, class: 'field' %>
  </div>
  <%= flash[:errors] if flash[:errors] %>
  <%= f.submit "send"%>
  <% end %>
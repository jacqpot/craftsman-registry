<%= form_for @user_detail do |f| %>
  
  <%= flash[:errors] if flash[:errors] %>
<br>
  <div>
    <%= f.label "name" %><br />
    <%= f.text_field :name, class: 'field' %>
  </div>

  <div>
    <%= f.label "phone_number" %><br />
    <%= f.text_field :phone_number, class: 'field' %>
  </div>

  <div>
    <%= f.label "state" %><br />
    <%= f.text_field :state, class: 'field' %>
  </div>

  <div>
    <%= f.label "city" %><br />
    <%= f.text_field :city, class: 'field' %>
  </div>
  <%= f.hidden_field(:user_id, value: current_user.id) %>
  <%= f.submit %>
  <% end %>